#!/usr/bin/env sh
set -e
# nodebrew がある環境だけ PATH を拡張
if command -v nodebrew >/dev/null 2>&1; then
  export PATH="$HOME/.nodebrew/current/bin:$PATH"
fi
# リポジトリルート基準で frontend に移動（CWDに依存しない）
cd "$(git rev-parse --show-toplevel)/frontend"

# ローカルの lint-staged を優先実行（なければ npx が取得）
npx lint-staged
npm run lint